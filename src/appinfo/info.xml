        <job>OCA\Passwords\Cron\ProcessDeletedEntities</job>
        <job>OCA\Passwords\Cron\CheckPasswordsJob</job>
        <job>OCA\Passwords\Cron\SynchronizeShares</job>
        <job>OCA\Passwords\Cron\BackupJob</job>
    </background-jobs>
    <repair-steps>
